<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BioAct">
    
    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:background="@drawable/grad"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border">

           <ImageView
               android:src="@drawable/photo_bio"
               android:layout_margin="9dp"
               android:adjustViewBounds="true"
               android:scaleType="centerInside"
               android:padding="3dp"
               android:background="@drawable/circle"
               android:layout_width="120dp"
               android:layout_height="120dp"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgUser"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/mmedium"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:text="Mhd Fachri Adrianta"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/mmedium"
            android:textSize="14sp"
            android:textColor="#FFFFFF"

            android:textAllCaps="true"
            android:text="Nort Sumatera, Indonesia"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linlay1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rellay1">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:background="@color/followersBG"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:fontFamily="@font/mregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:text="Java"/>


                <TextView
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/mregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:text="Android Apps"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:background="@color/followingBG"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:fontFamily="@font/mregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:text="Firebase"/>


                <TextView
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/mregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:text="Database"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/linlay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="@color/redPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayPrimary"
                android:fontFamily="sans-serif-light"
                android:textSize="18sp"
                android:text="Muhammadfachhriadrianta12@gmail.com"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:background="@color/grayPrimary"
                android:layout_height="1dp"/>


        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/redPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Phone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayPrimary"
                    android:fontFamily="sans-serif-light"
                    android:textSize="18sp"
                    android:text="+62-85276023442"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/grayPrimary"
                    android:layout_height="1dp"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/redPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Github.com"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayPrimary"
                    android:fontFamily="sans-serif-light"
                    android:textSize="18sp"
                    android:text="https://github.com/mfachriadrianta"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/grayPrimary"
                    android:layout_height="1dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/redPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="MyPortfolio"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayPrimary"
                    android:fontFamily="sans-serif-light"
                    android:textSize="18sp"
                    android:text="https://mfachriadrianta.wordpress.com"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/grayPrimary"
                    android:layout_height="1dp"/>


            </LinearLayout>



        </LinearLayout>
        
    </RelativeLayout>

</RelativeLayout>